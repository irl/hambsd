+{
+	struct ekiss_softc *sc;
+	int error;
+
+	error = 0;
+
+	if (!ifq_is_priq(&ifp->if_snd))
+		return (if_enqueue_ifq(ifp, m));
+
+	/* if there's the wrong ldisc then abort */
+
+	sc = ifp->if_softc;
+
+	if (sc->sc_devp == NULL)
+		return (EINVAL);
+
+	counters_pkt(ifp->if_counters,
+	    ifc_opackets, ifc_obytes, m->m_pkthdr.len);
+
+	kissoutput(sc, m);
+
+	return (error);
+}
