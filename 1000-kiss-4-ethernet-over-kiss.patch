+	sc->sc_dead = 1;
+
+	if (ISSET(ifp->if_flags, IFF_RUNNING))
+		axkiss_down(sc);
+	NET_UNLOCK();
+
+	ax25_ifdetatch(ifp);
+	if_detach(ifp);
+	free(sc, M_DEVBUF, sizeof(*sc));
+
+	return (0);
