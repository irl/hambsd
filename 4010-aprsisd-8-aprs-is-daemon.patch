+#define AX25ADDR_LASTCALL 0x01
+#define AX25ADDR_RESERVED (0x20 | 0x40)
+#define AX25ADDR_CR       0x80
+
+#define AX25_MAXDIGIS 8
+
+struct ax25_address {
