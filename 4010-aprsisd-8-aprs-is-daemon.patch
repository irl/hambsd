+struct sockaddr_ax25 {
+	u_int8_t		sax_len;
+	sa_family_t		sax_family;
+	struct ax25_address	sax_addr;
+	int8_t			sax_pathlen;
+	struct ax25_address	sax_path[AX25_MAXDIGIS];
+};
+
+char *ax25_ntoa(struct ax25_address *);
