+		error = if_clone_create(xname, rdomain);
+		switch (error) {
+		case EEXIST:
+			/* we lost a race to create */
+			/* FALLTHROUGH */
+		case 0:
+			if ((sc = axtap_lookup(minor(dev))) == NULL)
+				return (ENXIO);
+			sc->sc_flags &= ~TUN_STAYUP;
+			break;
+		default:
+			return (error);
+		}
+	}
+
+	return (tun_dev_open(sc, flag, mode, p));
